<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmotiPal.Views.MainPage"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             ios:Page.UseSafeArea="True"
             NavigationPage.HasNavigationBar="False">

    <StackLayout BackgroundColor="#252525">
        <Grid>
            <Image Source="orange_bg"
                   Aspect="AspectFill" />
            <Label FontFamily="Ribeye"
                   FontSize="72"
                   VerticalOptions="StartAndExpand"
                   HorizontalTextAlignment="Center"
                   Text="EmotiPal!"                   
                   TextColor="Black"                   
                   />
            <StackLayout VerticalOptions="End"                         
                         TranslationY="45">
                <Image Source="crossed_swords"                   
                   HeightRequest="100"
                   WidthRequest="100"
                       />
            </StackLayout>
        </Grid>
        <StackLayout Padding="{StaticResource ButtonStackLayoutThickness}"
                     VerticalOptions="CenterAndExpand"
                     Spacing="25">
            <Button Text="Analyse Sentiment"
                    Command="{Binding AnalyseTextCommand}"
                    xct:ShadowEffect.Color="Black"
                    xct:ShadowEffect.Radius="10"
                    xct:ShadowEffect.OffsetX="15"
                    xct:ShadowEffect.OffsetY="15"/>

            <Button Text="Analyse Emotion"
                    Command="{Binding AnalyseBodyLanguageCommand}" 
                    xct:ShadowEffect.Color="Black"
                    xct:ShadowEffect.Radius="10"
                    xct:ShadowEffect.OffsetX="15"
                    xct:ShadowEffect.OffsetY="15"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
